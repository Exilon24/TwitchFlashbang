<Window x:Class="TwitchFlashbang.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchFlashbang"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" FontSize="40" FontWeight="Bold">Twitch Flashbang</TextBlock>
        <Separator Height="100" Background="Transparent"/>
        <TextBlock HorizontalAlignment="Center" FontSize="20">Please select a donation handler.</TextBlock>
        <ComboBox x:Name="donoProviders" Width="300" Height="40" FontSize="20" HorizontalContentAlignment="Center">
            <ComboBoxItem>Streamlabs</ComboBoxItem>
        </ComboBox>
        <Separator Height="140" Background="Transparent"/>
        <Button Width="200" Height="40" FontSize="20" Click="Button_Click_1">Ready</Button>
    </StackPanel>
</Window>
    
